<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <AutoCompleteTextView
        android:id="@+id/editTextCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/categoryPrompt"
        android:paddingStart="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/descriptionPrompt"
        android:layout_below="@+id/editTextCategory"
        android:paddingStart="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/categoryCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/costPrompt"
        android:layout_below="@+id/description"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/chooseDate"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/chooseDate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/datePrompt"
        android:layout_below="@id/categoryCost"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_signup"/>

</RelativeLayout>
